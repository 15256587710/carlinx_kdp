<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_water_title"
        style="@style/text_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="行驶两次" />

    <ImageView
        android:id="@+id/img_water"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_below="@+id/tv_water_title"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/pic_ball1" />

    <TextView
        android:id="@+id/tv_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_water"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_water_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_water"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lay_bg1d_radius4"
        android:padding="2dp"
        android:text="即将过期"
        android:textColor="@color/white"
        android:textSize="8sp" />
</RelativeLayout>