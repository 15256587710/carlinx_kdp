<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/img_carlogin_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="32dp"
        android:src="@mipmap/icon_close_black"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@mipmap/icon_phone"/>
    <TextView
        style="@style/text_black"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="车机登录确认"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_carlogin_login"
        android:layout_width="192dp"
        android:layout_height="44dp"
        android:background="@drawable/lay_bgblue_radius4"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="登录"/>
    <Button
        android:id="@+id/btn_carlogin_cancel"
        android:layout_width="192dp"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/tab_n"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:text="取消登录"/>
</LinearLayout>