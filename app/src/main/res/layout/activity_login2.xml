<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="32dp">
    <ImageView
        android:id="@+id/img_login_back"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/icon_close_black"
        android:layout_marginTop="10dp"
        />
    <TextView
        style="@style/text_black"
        android:textSize="26sp"
        android:layout_marginTop="54dp"
        android:text="Hi，立即登录"/>
    <TextView
        style="@style/text_c1"
        android:layout_marginTop="12dp"
        android:text="即可感受全新车联网体验"/>
    <TextView
        style="@style/text_black"
        android:textSize="14sp"
        android:layout_marginTop="64dp"
        android:text="手机号码"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:background="@drawable/lay_bottom_border"
        android:layout_marginTop="20dp">
        <TextView
            style="@style/text_black16"
            android:text="+86"/>
        <EditText
            android:id="@+id/et_loginnew_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="24dp"
            android:textColorHint="@color/color_c1"
            android:textSize="16sp"
            android:textColor="@color/tab_y"
            android:maxLength="11"
            android:inputType="phone"
            android:hint="请输入手机号码"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_loginnew_getcode"
        style="@style/btn_bgblue_rd4"
        android:layout_marginTop="30dp"
        android:text="获取验证码"/>
    <TextView
        style="@style/text_c1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="用户第一次登录即为注册并登录"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/colorBottomLine"
            android:layout_height="1dp"/>
        <TextView
            style="@style/text_c1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="or"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/colorBottomLine"
            android:layout_height="1dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_loginnew_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:src="@mipmap/icon_wechat_login"/>
    <LinearLayout
        android:id="@+id/ll_loginnew_xy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            style="@style/text_c1"
            android:text="登录即同意"/>
        <TextView
            style="@style/text_black"
            android:text="用户服务协议"/>
    </LinearLayout>

</LinearLayout>