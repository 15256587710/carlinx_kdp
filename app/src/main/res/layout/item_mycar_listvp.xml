<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_mycarlist"
        android:layout_width="206dp"
        android:layout_height="216dp"
        app:cardBackgroundColor="@color/white"
        app:contentPadding="12dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/item_img_car"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@mipmap/pic_default_car"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/item_mycar_title"
                style="@style/text_black16"
                android:text=""
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/item_mycar_content"
                style="@style/text_black16"
                android:textSize="14sp"
                android:text=""
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/item_mycar_time"
                style="@style/text_c1"
                android:text="2018-05-04 购入"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>