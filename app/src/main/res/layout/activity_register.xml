<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include
        layout="@layout/toolbar_bases"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        <TextView
            style="@style/text_666_14"
            android:layout_marginTop="20dp"
            android:text="请填写手机号码进行注册"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic_login_phone_black"/>
            <EditText
                android:id="@+id/et_register_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="16sp"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/tab_y"
                android:textColorHint="@color/color_b2"
                android:layout_marginLeft="20dp"
                android:hint="请输入手机号"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic_login_anquan"/>
            <com.ecarxclub.app.views.ClearEditText
                android:id="@+id/et_register_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@mipmap/pic_login_delect"
                android:background="@null"
                android:textSize="16sp"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="6"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/tab_y"
                android:layout_marginLeft="20dp"
                android:textColorHint="@color/color_b2"
                android:hint="请输入验证码"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/color_f1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/btn_register_code"
                style="@style/text_cb9f54_14"
                android:width="85dp"
                android:gravity="center"
                android:text="获取验证码"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic_login_pwd_black"/>
            <EditText
                android:id="@+id/et_register_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingTop="12dp"
                android:layout_marginLeft="20dp"
                android:maxLength="12"
                android:paddingBottom="12dp"
                android:textColor="@color/tab_y"
                android:textColorHint="@color/color_b2"
                android:hint="请输入密码(8-12位字母与数字组合)"
                />
            <ImageView
                android:id="@+id/img_regist_lookpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@mipmap/pic_login_lookpwd_black"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <CheckBox
                android:id="@+id/cb_regist_agree"
                style="@style/checkbox_login"
                android:drawablePadding="10dp"
                android:text="同意"/>
            <TextView
                style="@style/text_cb9f54_12"
                android:text="《用户使用条款及服务协议》"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@mipmap/pic_login_btn"
            android:text="@string/app_txt_register"
            android:textColor="@color/white"
            android:layout_margin="30dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp">
            <TextView
                style="@style/text_666_14"
                android:text="已有账号"
                />
            <TextView
                style="@style/text_cb9f54_14"
                android:text="立即登录"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>