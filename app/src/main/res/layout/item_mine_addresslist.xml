<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/lay_bottom_border"
        android:padding="16dp">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_address"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_tv_address_name"
                    style="@style/text_black16"
                    android:layout_weight="1"
                    android:text="收货人："/>
                <TextView
                    android:id="@+id/item_tv_address_phone"
                    style="@style/text_black16"
                    android:text="152565777777"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_tv_address_info"
                style="@style/text_gry14"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:text="浙江省杭州市来的空间发了看到："/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/ll_horizontal_p"
        android:layout_height="38dp">
        <CheckBox
            android:id="@+id/item_cb_address_default"
            style="@style/checkbox_address"
            android:text="默认地址"
            android:checked="false"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_tv_address_edit"
            style="@style/text_gry"
            android:padding="4dp"
            android:text="编辑"/>
        <TextView
            android:id="@+id/item_tv_address_delete"
            style="@style/text_gry"
            android:padding="4dp"
            android:layout_marginLeft="10dp"
            android:text="删除"/>
    </LinearLayout>
</LinearLayout>