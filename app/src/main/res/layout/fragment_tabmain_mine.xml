<?xml version="1.0" encoding="utf-8"?>
<com.andview.refreshview.XRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/xRefreshview"
    android:background="@color/color_bg">
    <com.andview.refreshview.XScrollView
        android:id="@+id/xscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_mine_header"
                android:layout_width="match_parent"
                android:layout_height="208dp"
                android:background="@mipmap/person_header_pic">

                <TextView
                    android:id="@+id/tv_mine_title"
                    style="@style/text_white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="33dp"
                    android:text="个人中心"
                    android:textSize="18sp" />
                <RelativeLayout
                    android:id="@+id/rl_home_message"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_mine_title"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/home_nav_icon_news"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/tv_mine_msgnum"
                        style="@style/text_white"
                        android:text="0"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="14dp"
                        android:visibility="gone"
                        android:background="@drawable/circle_shape_red"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_mine_title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_mine_head"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@mipmap/person_pic_default" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_mine_phone"
                                style="@style/text_white16"
                                android:layout_width="wrap_content"
                                android:textSize="20sp"
                                android:ellipsize="end"
                                android:maxWidth="160dp"
                                android:lines="1"
                                android:text="" />
                            <ImageView
                                android:id="@+id/img_mine_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                />
                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/pb_mine_level"
                            android:layout_width="150dp"
                            android:layout_height="4dp"
                            android:max="100"
                            android:progress="0"
                            android:layout_marginTop="8dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progressbar_bg"/>
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_mine_integral"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/colorTransparentW50"
                                android:textSize="10sp"
                                android:text=""
                                />
                            <TextView
                                android:id="@+id/tv_mine_leveltxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTransparentW50"
                                android:textSize="10sp"
                                android:text=""
                                />
                        </LinearLayout>
                        <!--<TextView
                            android:id="@+id/tv_mine_username"
                            style="@style/text_white16"
                            android:visibility="gone"
                            android:text="111" />

                        <TextView
                            android:id="@+id/tv_mine_usercontent"
                            style="@style/text_white16"
                            android:layout_marginTop="8dp"
                            android:text="2222"
                            android:textColor="@color/colorTransparentW30"
                            android:visibility="gone"
                            android:textSize="14sp" />-->
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/ll_mine_level"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/img_mine_bglevel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/tv_mine_levelname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_level1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text=""
                        android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_mine_nowintegral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/color_level1"
                            android:text=""/>
                        <TextView
                            android:id="@+id/tv_mine_loseintegral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/color_level1"
                            android:text=""/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <!--<android.support.v7.widget.CardView
                android:id="@+id/cv_mine"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_below="@+id/rl_mine_header"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="-34dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">
            </android.support.v7.widget.CardView>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mine_mycar"
                    style="@style/text_black"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/person_list_menu_car"
                    android:gravity="center"
                    android:text="我的车辆" />

                <TextView
                    android:id="@+id/tv_mine_coupon"
                    style="@style/text_black"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/person_list_menu_card"
                    android:gravity="center"
                    android:text="我的卡券" />

                <TextView
                    android:id="@+id/tv_mine_order"
                    style="@style/text_black"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/person_list_menu_order"
                    android:gravity="center"
                    android:text="我的订单" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_mine_myaddress"
                    style="@style/ll_horizontal_p"
                    android:layout_height="48dp"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/person_list_menu_address"/>
                    <TextView
                        style="@style/text_black16"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="我的地址"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/person_icon_right"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_mine_aboutus"
                    style="@style/ll_horizontal_p"
                    android:layout_height="48dp"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/person_list_menu_aboutus"/>
                    <TextView
                        style="@style/text_black16"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="关于我们"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/person_icon_right"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_mine_callphone"
                    style="@style/ll_horizontal_p"
                    android:layout_marginTop="10dp"
                    android:layout_height="48dp"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/person_list_menu_service"/>
                    <TextView
                        style="@style/text_black16"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="联系客服"/>
                    <TextView
                        style="@style/text_c1"
                        android:layout_marginRight="8dp"
                        android:text="@string/str_callphone"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/person_icon_right"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_mine_accountset"
                    style="@style/ll_horizontal_p"
                    android:layout_height="48dp"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/person_list_menu_set"/>
                    <TextView
                        style="@style/text_black16"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="账户设置"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/person_icon_right"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_bind"
                    style="@style/ll_horizontal_p"
                    android:layout_height="48dp"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/person_list_menu_binding"/>
                    <TextView
                        style="@style/text_black16"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="账号与绑定设置"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/person_icon_right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.andview.refreshview.XScrollView>


</com.andview.refreshview.XRefreshView>