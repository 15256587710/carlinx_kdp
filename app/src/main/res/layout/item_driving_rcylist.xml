<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg"
    >
    <TextView
        android:id="@+id/item_driving_time"
        style="@style/text_c1"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="12345"/>
    <LinearLayout
        android:id="@+id/item_ll_driving_next"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/lay_bgwhite_radius4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/pic_blue"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_dd_list_time"
                style="@style/text_black"
                android:textSize="20dp"
                android:text="1212"/>
            <TextView
                android:id="@+id/item_dd_list_city"
                style="@style/text_gry14"
                android:layout_marginTop="8dp"
                android:text="1212"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/circle_shape_gry"
                />
            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layerType="software"
                android:background="@drawable/dotted_vert_line"/>
            <TextView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/circle_shape_gry"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_dd_list_stataddress"
                style="@style/text_black"
                android:textSize="14dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="地方吉林省会计法律"/>
            <TextView
                android:id="@+id/item_dd_list_endaddress"
                style="@style/text_black"
                android:textSize="14dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:text="给你搞框架框架高考"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:src="@mipmap/nav_icon_right"/>
    </LinearLayout>
</LinearLayout>