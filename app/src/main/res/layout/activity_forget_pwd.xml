<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_bases" />

    <TextView
        style="@style/text_666_14"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="请填写手机号找回密码"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_login_phone_black"/>
        <EditText
            android:id="@+id/et_forget_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/tab_y"
            android:textColorHint="@color/color_b2"
            android:layout_marginLeft="20dp"
            android:hint="请输入手机号"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_login_anquan"/>
        <com.ecarxclub.app.views.ClearEditText
            android:id="@+id/et_forget_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="6"
            android:paddingTop="12dp"
            android:text=""
            android:paddingBottom="12dp"
            android:textColor="@color/tab_y"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/color_b2"
            android:drawableRight="@mipmap/pic_login_delect"
            android:hint="请输入验证码"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/color_f1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/btn_forget_code"
            style="@style/text_cb9f54_14"
            android:width="85dp"
            android:gravity="center"
            android:text="获取验证码"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f1"
        />
    <Button
        android:id="@+id/btn_forget_next"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:background="@mipmap/pic_login_btn"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="下一步"/>
</LinearLayout>