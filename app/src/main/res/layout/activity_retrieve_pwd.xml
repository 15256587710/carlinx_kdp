<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">
    <include
        layout="@layout/toolbar_bases"
        />
    <TextView
        android:id="@+id/tv_get_phonetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/tab_n"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="请填写需要领取卡券的手机号："/>
    <LinearLayout
        style="@style/ll_horizontal_p"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        >
        <TextView
            style="@style/text_black16"
            android:text="手机号码"
            />
        <EditText
            android:id="@+id/et_forget_phone"
            style="@style/et_hintc1_bgwhite"
            android:layout_marginLeft="28dp"
            android:inputType="number"
            android:maxLength="11"
            android:hint="请输入手机号码"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/ll_horizontal_p"
        android:layout_height="48dp"
        >
        <TextView
            style="@style/text_black16"
            android:text="短信验证"
            />
        <EditText
            android:id="@+id/et_forget_code"
            style="@style/et_hintc1_bgwhite"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_marginLeft="28dp"
            android:maxLength="6"
            android:hint="请输入验证码"
            />
        <Button
            android:id="@+id/btn_forget_code"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:background="@drawable/lay_bgyellow_radius32"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="获取验证码"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_forget_next"
        style="@style/btn_bg1d_rd4"
        android:layout_height="48dp"
        android:text="下一步"
        android:layout_marginTop="30dp"
        />

</LinearLayout>