<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">
    <include
        layout="@layout/toolbar_bases"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_about"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/banner_05"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            android:background="@drawable/lay_bgwhite_radius4"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/circle_shape_about1"
                    android:layout_margin="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/circle_shape_about2"
                    android:layout_margin="15dp"/>
            </LinearLayout>
            <TextView
                style="@style/text_black16"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:text="咖豆派"/>
            <TextView
                style="@style/text_gry14"
                android:layout_margin="20dp"
                android:text="咖豆派主要为吉利车主提供精准的车辆数据信息，和车辆状态检测等功能。本产品由杭州车凌网络科技有限公司自主研发，与湖北亿咖通科技有限公司达成战略合作伙伴，为您提供更加安全、可靠、舒适的汽车服务体验。"/>
            <TextView
                style="@style/text_gry14"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="咖豆派还附加了积分商城、会员卡券、违章查询等功能——积分商城让您在开车中也可以获得收益；会员卡券让您在脱离汽车场景后，也能在生活中享受到吉利汽车为您带来的优惠服务；违章查询可实时查看您违规处理情况。还有更多等功能等您来体验。"/>
            <TextView
                style="@style/text_gry14"
                android:text="咖豆派是您贴心的汽车管家！"
                android:layout_margin="20dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@mipmap/pic_logo2"/>
    </RelativeLayout>
</LinearLayout>