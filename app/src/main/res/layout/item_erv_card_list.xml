<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:orientation="horizontal"
            android:background="@mipmap/pic_left">
            <ImageView
                android:id="@+id/item_img_card"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/pic_02"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">
                <TextView
                    android:id="@+id/item_erv_card_name"
                    style="@style/text_black16"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="车辆损失44444"/>
                <TextView
                    android:id="@+id/item_erv_card_title"
                    style="@style/text_gry"
                    android:text="车辆损失44444"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="4dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:id="@+id/item_tv_card_type"
                        style="@style/text_border"
                        android:layout_marginRight="6dp"
                        android:text="金融类"/>
                    <TextView
                        android:id="@+id/item_tv_card_tag"
                        style="@style/text_border"
                        android:text="金融类"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/item_tv_look"
            android:textSize="14sp"
            android:textColor="@color/tab_n"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="查看详情"
            android:gravity="center"
            android:background="@mipmap/pic_right"
            />
    </LinearLayout>
</LinearLayout>