<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentW100">

    <RelativeLayout
        android:id="@+id/popup_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_pop_level"
        android:background="@color/colorTransparentW100">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_pop_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/lay_bottom_border"
            >
            <TextView
                android:id="@+id/pop_orderpay_cancel"
                style="@style/text_gry14"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="取消"/>
            <TextView
                style="@style/text_black16"
                android:layout_centerInParent="true"
                android:text="请选择付款方式"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_pay_phone"
            style="@style/ll_horizontal_p"
            android:layout_height="56dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_pay_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_xiaomi" />
                <TextView
                    android:id="@+id/tv_pay_phone"
                    android:layout_width="wrap_content"
                    style="@style/text_black"
                    android:layout_marginLeft="10dp"
                    android:text="pay"
                    android:textSize="15sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/pic_logo_pay" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_icon_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pop_ll_orderpay_yl"
            style="@style/ll_horizontal_p"
            android:layout_height="56dp">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/unionpay"/>
                <TextView
                    style="@style/text_black16"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:text="云闪付"/>
            </LinearLayout>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/pic_logo_pay"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_icon_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pop_ll_orderpay_alipay"
            style="@style/ll_horizontal_p"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_alipay"/>
            <TextView
                style="@style/text_black16"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:text="支付宝支付"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_icon_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pop_ll_orderpay_wechat"
            style="@style/ll_horizontal_p"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_wechat"/>
            <TextView
                style="@style/text_black16"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:text="微信支付"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_icon_right"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>