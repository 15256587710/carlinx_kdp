<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="32dp">
    <ImageView
        android:id="@+id/img_bindphone_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/nav_icon_back"
        android:padding="5dp"
        />
    <TextView
        style="@style/text_black"
        android:textSize="14sp"
        android:layout_marginTop="62dp"
        android:text="绑定手机号"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@drawable/lay_bottom_border"
        android:layout_marginTop="24dp">
        <TextView
            style="@style/text_black16"
            android:text="+86"/>
        <EditText
            android:id="@+id/et_loginbind_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="24dp"
            android:textColorHint="@color/color_c1"
            android:textSize="16sp"
            android:textColor="@color/tab_y"
            android:maxLength="11"
            android:inputType="phone"
            android:hint="请输入手机号码"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_loginbind_getcode"
        style="@style/btn_bgblue_rd4"
        android:layout_marginTop="30dp"
        android:text="获取验证码"/>
</LinearLayout>