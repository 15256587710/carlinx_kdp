<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_bases" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@mipmap/pic_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lay_bottom_border">
                <TextView
                    android:id="@+id/tv_exd_noaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:drawableLeft="@mipmap/homepage_icon_add"
                    android:textSize="14sp"
                    android:textColor="@color/tab_y"
                    android:drawablePadding="5dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="添加地址"/>
                <LinearLayout
                    android:id="@+id/ll_exd_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon_address" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/item_tv_address_name"
                                style="@style/text_black16"
                                android:layout_weight="1"
                                android:text="收货人：" />

                            <TextView
                                android:id="@+id/item_tv_address_phone"
                                style="@style/text_black16"
                                android:text="152565777777" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/item_tv_address_info"
                            style="@style/text_gry14"
                            android:layout_marginTop="6dp"
                            android:maxLines="2"
                            android:text="浙江省杭州市来的空间发了看到："
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/nav_icon_right" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <LinearLayout
                    style="@style/ll_horizontal_p"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/img_ex_details"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:src="@mipmap/icon_alipay" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_exd_name"
                            style="@style/text_black"
                            android:text="大家拉科技覅基金"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_exd_type"
                                style="@style/text_border"
                                android:text="配件类"
                                android:textSize="10sp" />
                            <TextView
                                android:id="@+id/tv_exd_tag"
                                style="@style/text_border"
                                android:text="配件类"
                                android:layout_marginLeft="10dp"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_exd_info"
                                style="@style/text_red16"
                                android:layout_weight="1"
                                android:text="老大会计分录"
                                android:textSize="14sp" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/lay_bgwhite_border">
                                <TextView
                                    android:id="@+id/tv_exd_reduce"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:gravity="center"
                                    android:textSize="18sp"
                                    android:textColor="@color/tab_y"
                                    android:text="-"/>
                                <View
                                    android:layout_width="0.5dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorBottomLine"/>

                                <EditText
                                    android:id="@+id/et_exd_num"
                                    android:layout_width="50dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/lay_bottom_border"
                                    android:gravity="center"
                                    android:text="1"
                                    android:inputType="number"
                                    android:textColor="@color/tab_y"
                                    android:textSize="12sp" />
                                <View
                                    android:layout_width="0.5dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorBottomLine"/>

                                <TextView
                                    android:id="@+id/tv_exd_add"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:gravity="center"
                                    android:textSize="18sp"
                                    android:textColor="@color/tab_y"
                                    android:text="+"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/lay_bottom_border"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_black"
                        android:layout_weight="1"
                        android:text="商品积分"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_exd_score"
                        style="@style/text_gry"
                        android:text="1000积分"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/lay_bottom_border"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_black"
                        android:layout_weight="1"
                        android:text="商品金额"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_exd_money"
                        style="@style/text_gry"
                        android:text="1000元"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/lay_bottom_border"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_black"
                        android:layout_weight="1"
                        android:text="配送方式："
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_exd_sendfree"
                        style="@style/text_gry"
                        android:text="免邮"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/lay_bottom_border"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="16dp">

                    <TextView
                        style="@style/text_black"
                        android:layout_weight="1"
                        android:text="积分账户："
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_exd_user_score"
                        style="@style/text_gry"
                        android:text="1000积分"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <include
                layout="@layout/include_pay_type"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                />
