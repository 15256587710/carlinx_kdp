<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/pic_bg2_1">
        <include
            layout="@layout/toolbar_bases_n"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:background="@mipmap/pic_bg2_2"
                >
                <com.ecarxclub.app.views.WaterView
                    android:id="@+id/wv_ic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginBottom="60dp">
                </com.ecarxclub.app.views.WaterView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_ic_integral_all"
                        style="@style/text_white"
                        android:textSize="36sp"
                        android:text=""/>
                    <TextView
                        style="@style/text_white"
                        android:background="@drawable/lay_borderfff_10"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="积分"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_ic_timetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/colorTransparentW50"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:drawableLeft="@mipmap/icon_remind"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="50dp"
                    android:text="气泡超过24小时后将自动消失"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/lay_bgwhite_radius4"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_marginTop="-40dp">

                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="18dp">
                    <TextView
                        style="@style/text_black16"
                        android:text="每日任务" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="6dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorYellow50" />
                </RelativeLayout>
                <com.ecarxclub.app.views.RecyclerForScrollView
                    android:id="@+id/rcv_ic_everyday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </com.ecarxclub.app.views.RecyclerForScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/lay_bgwhite_radius4"
                android:padding="20dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="18dp">
                    <TextView
                        style="@style/text_black16"
                        android:text="新手任务" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="6dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorYellow50" />
                </RelativeLayout>
                <com.ecarxclub.app.views.RecyclerForScrollView
                    android:id="@+id/rcv_ic_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </com.ecarxclub.app.views.RecyclerForScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>