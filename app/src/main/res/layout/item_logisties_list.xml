<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/item_tv_logist_circle"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/circle_shape_red"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBottomLine"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_lg_title"
                style="@style/text_black16"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="dskjfjk"/>
            <TextView
                android:id="@+id/item_lg_time"
                style="@style/text_c1"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:text="dskjfjk"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>