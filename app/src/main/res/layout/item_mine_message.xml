<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/item_tv_msg_circle"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/circle_shape_red"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/item_msg_title"
                style="@style/text_black16"
                android:ellipsize="end"
                android:lines="1"
                android:text="您哟12积分待领取"/>
            <TextView
                android:id="@+id/item_msg_time"
                style="@style/text_gry14"
                android:layout_marginTop="12dp"
                android:text="14:22"/>
            <TextView
                android:id="@+id/item_msg_content"
                style="@style/text_gry"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:visibility="gone"
                android:text="14:22了解对方空间我股东肌肤更快乐两款发动机朗国际没感觉都是来看几个了快递了解更多是赶紧离开过李经理说几个老师那个老师那个两个你过来"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>