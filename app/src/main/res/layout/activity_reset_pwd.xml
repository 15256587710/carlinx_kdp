<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">
    <include
        layout="@layout/toolbar_bases"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp">
        <TextView
            style="@style/text_gry14"
            android:text="手机号码："/>
        <TextView
            android:id="@+id/tv_reset_phone"
            style="@style/text_gry14"
            android:text="152626666777"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_reset_pwd"
        style="@style/et_hintc1_bgwhite"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:inputType="textPassword"
        android:hint="请输入新密码"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBottomLine"/>
    <EditText
        android:id="@+id/et_reset_newpwd"
        style="@style/et_hintc1_bgwhite"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:inputType="textPassword"
        android:hint="请再次输入新密码"
        />
    <Button
        android:id="@+id/btn_reset_sure"
        style="@style/btn_bg1d_rd4"
        android:layout_height="48dp"
        android:text="确定"
        android:layout_marginTop="30dp"
        />

</LinearLayout>