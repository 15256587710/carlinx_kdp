<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@mipmap/pic_signin_bgb"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar_bases_n"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="214dp"
                android:background="@mipmap/pic_signin_bga"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    >
                    <ImageView
                        android:id="@+id/img_signin"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:background="@mipmap/pic_signin_button"/>

                    <TextView
                        android:id="@+id/tv_signin"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_CBA158"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="签到"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_signin_integral"
                        style="@style/text_white"
                        android:textSize="14sp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="我的积分："/>
                    <TextView
                        android:id="@+id/tv_signin_shop"
                        style="@style/text_white"
                        android:layout_marginRight="16dp"
                        android:textSize="14sp"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@mipmap/icon_mall"
                        android:text="积分商城"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lay_bgwhite_top16"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="-18dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="36dp"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        />
                    <TextView
                        style="@style/text_black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="已连续签到"/>
                    <View
                        android:layout_width="36dp"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp">
                    <TextView
                        android:id="@+id/tv_signin_day"
                        android:textStyle="bold"
                        style="@style/text_red16"
                        android:textSize="56sp"
                        android:text="001"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        style="@style/text_c1"
                        android:textSize="14sp"
                        android:text="天"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_signin_txt"
                    style="@style/text_gry14"
                    android:layout_marginTop="10dp"
                    android:text="连续签到7日后可每天获得10积分"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/rcv_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                <TextView
                    style="@style/text_black16"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:text="连续签到奖励"/>
                <com.ecarxclub.app.views.RecyclerForScrollView
                    android:id="@+id/rfsv_signin_reward"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content">

                </com.ecarxclub.app.views.RecyclerForScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>