<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar_bases"
        />
    <TextView
        style="@style/text_666_14"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="请填写新密码"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_login_pwd_black"/>
        <EditText
            android:id="@+id/et_cfp_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:paddingTop="12dp"
            android:layout_marginLeft="20dp"
            android:maxLength="12"
            android:paddingBottom="12dp"
            android:textColor="@color/tab_y"
            android:textColorHint="@color/color_b2"
            android:hint="请输入密码(8-12位字母与数字组合)"
            />
        <ImageView
            android:id="@+id/img_cfp_lookpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@mipmap/pic_login_lookpwd_black"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_login_pwd_black"/>
        <EditText
            android:id="@+id/et_cfp_pwd2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:paddingTop="12dp"
            android:layout_marginLeft="20dp"
            android:maxLength="12"
            android:paddingBottom="12dp"
            android:textColor="@color/tab_y"
            android:textColorHint="@color/color_b2"
            android:hint="请再次输入密码"
            />
        <ImageView
            android:id="@+id/img_cfp_lookpwd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@mipmap/pic_login_lookpwd_black"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f1"
        />

    <Button
        android:id="@+id/btn_cfp_confirm"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@mipmap/pic_login_btn"
        android:text="确认修改"/>
</LinearLayout>