<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_mall">
    <include
        layout="@layout/toolbar_bases_n"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="28dp"
                android:paddingTop="28dp"
                android:paddingRight="28dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/lay_bgwhite_top8"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/colorTrsR94">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_cpd_type"
                            style="@style/text_border"
                            android:text="金融类"/>
                        <TextView
                            android:id="@+id/tv_cpd_tag"
                            style="@style/text_border"
                            android:text="金融类"
                            android:layout_marginLeft="6dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_cpd_title"
                        style="@style/text_gry"
                        android:text="限时采购"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tv_cpd_name"
                        style="@style/text_black"
                        android:textSize="22dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="限时采购"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_cpd_time"
                    style="@style/text_gry"
                    android:text="限制时间：2018.12.12"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:id="@+id/tv_cpd_address"
                    style="@style/text_gry"
                    android:text="限制地点：2018.12.12"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/tv_cpd_people"
                    style="@style/text_gry"
                    android:text="限制人数：2018.12.12"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic_line_card"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="28dp"
                android:paddingTop="10dp"
                android:paddingRight="28dp"
                android:paddingBottom="28dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/lay_bgwhite_bottom8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/text_gry"
                        android:textSize="16sp"
                        android:text="订单编号："
                        />
                    <TextView
                        android:id="@+id/tv_cpd_ordernum"
                        style="@style/text_black16"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/text_gry"
                        android:textSize="16sp"
                        android:text="领取时间："
                        />
                    <TextView
                        android:id="@+id/tv_cpd_gettime"
                        style="@style/text_black16"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/text_gry"
                        android:textSize="16sp"
                        android:text="领取手机号："
                        />
                    <TextView
                        android:id="@+id/tv_cpd_phone"
                        style="@style/text_black16"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/text_gry"
                        android:textSize="16sp"
                        android:text="卡券状态："
                        />
                    <TextView
                        android:id="@+id/tv_cpd_status"
                        style="@style/text_black16"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/pic_logo1"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


</LinearLayout>