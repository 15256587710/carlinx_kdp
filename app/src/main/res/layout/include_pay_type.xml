<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/ll_include_pay"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/lay_bottom_border"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="请选择付款方式" />

    <LinearLayout
        android:id="@+id/ll_pay_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/lay_bottom_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_pay_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_xiaomi" />
            <TextView
                android:id="@+id/tv_pay_phone"
                android:layout_width="wrap_content"
                style="@style/text_black"
                android:layout_marginLeft="10dp"
                android:text="pay"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/pic_logo_pay" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <CheckBox
            android:id="@+id/cb_exd_phone"
            style="@style/checkbox_apply"
            android:clickable="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pay_yl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/lay_bottom_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="16dp">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/unionpay" />
            <TextView
                style="@style/text_black"
                android:layout_marginLeft="10dp"
                android:text="云闪付"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/pic_logo_pay" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <CheckBox
            android:id="@+id/cb_exd_yl"
            style="@style/checkbox_apply"
            android:clickable="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pay_ailpy"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/lay_bottom_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/icon_alipay" />

        <TextView
            style="@style/text_black"
            android:layout_weight="1"
            android:text="支付宝支付"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_exd_zfb"
            style="@style/checkbox_apply"
            android:clickable="false"
            android:checked="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pay_wechat"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/lay_bottom_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/icon_wechat" />

        <TextView
            style="@style/text_black"
            android:layout_weight="1"
            android:text="微信支付"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_exd_wx"
            style="@style/checkbox_apply"
            android:clickable="false"/>
    </LinearLayout>



</LinearLayout>