<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_tv_record_top"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:textColor="@color/color_c1"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="2019.2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/lay_bottom_border">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/item_tv_record_name"
                style="@style/text_black16"
                android:text="签到积分"/>
            <TextView
                android:id="@+id/item_tv_record_time"
                style="@style/text_gry14"
                android:layout_marginTop="6dp"
                android:text="2011-11-11"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_tv_record_num"
            style="@style/text_black16"
            android:textSize="18sp"
            android:text="+11"
            android:layout_marginRight="16dp"/>
    </LinearLayout>
</LinearLayout>