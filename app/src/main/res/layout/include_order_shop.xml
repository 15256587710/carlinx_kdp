<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        style="@style/ll_horizontal_p"
        android:layout_height="30dp"
        >
        <TextView
            android:id="@+id/item_tv_myorder_id"
            style="@style/text_gry14"
            android:layout_weight="1"
            android:text=""
            />
        <TextView
            android:id="@+id/item_tv_myorder_status"
            style="@style/text_ff5900"
            android:text=""
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_llcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lay_bottom_border"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/item_img_myorder"
            android:layout_width="75dp"
            android:layout_height="75dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/item_tv_myorder_name"
                style="@style/text_black"
                android:textSize="14sp"
                android:text=""/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_rv_tag_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_tv_myorder_info"
                    style="@style/text_red16"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:text=""/>
                <TextView
                    android:id="@+id/item_tv_myorder_num"
                    style="@style/text_c1"
                    android:textSize="14sp"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>